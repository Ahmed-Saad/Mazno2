<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dlgbg"
    android:padding="13dp">

    <TextView
        android:id="@+id/place_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="AAAAAAAAAAAAAAAA"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/place_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/place_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="AAAAAAAAA"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/place_dis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/place_type"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="AAAAAAAAA"
        android:textSize="25sp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/navigate_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/place_dis"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:src="@drawable/navigatebtn" />


</RelativeLayout>
